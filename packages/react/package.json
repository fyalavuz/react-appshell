{
  "name": "@appshell/react",
  "version": "0.2.0",
  "description": "Mobile-first app shell components for React â€” Header, Footer, Sidebar, TabBar, SafeArea",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./motion-framer": {
      "import": {
        "types": "./dist/motion-framer.d.ts",
        "default": "./dist/motion-framer.js"
      },
      "require": {
        "types": "./dist/motion-framer.d.cts",
        "default": "./dist/motion-framer.cjs"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": ["dist", "README.md", "LICENSE"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist",
    "size": "node scripts/size-report.mjs"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "framer-motion": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@testing-library/jest-dom": "^6.6.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "framer-motion": "^12.6.0",
    "jsdom": "^26.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.0",
    "clsx": "^2.1.0",
    "tsup": "^8.4.0",
    "vitest": "^3.2.0",
    "typescript": "^5.7.3"
  }
}
